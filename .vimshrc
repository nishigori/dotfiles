let $PATH="~/bin:~/.rbenv/bin:/usr/local/bin:".$PATH
let $PATH=$GOPATH."/bin:".$PATH

alias l  = 'ls -l'
alias ll = 'ls -l'
alias a  = 'ls -al'
alias la = 'ls -al'
alias lt = 'ls -tl'
alias lR = 'ls -Rl'

alias cl = 'clear'
alias hl = 'history'
alias untar = 'tar -xvf'

# rsync
alias rs = 'rsync -e ssh -az --progress $$args[1] $$args[2]'

# ctags
alias ctag = 'ctags -R ./'

# git
alias g = 'git'
alias gitlog = 'git log --graph --all --color --pretty="%x09%h %cn%x09%s %Cred%d"'
