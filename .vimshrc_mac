alias l  = 'ls -l'
alias ll = 'ls -l'
alias a  = 'ls -al'
alias la = 'ls -al'
alias lt = 'ls -tl'

alias cl = 'clear'
alias hl = 'history'
alias untar = 'tar -xvf'

# rsync
alias rs = 'rsync -e ssh -az --progress $$args[1] $$args[2]'

# ctags
alias ctag = '`brew --prefix`/bin/ctags -R ./'

# git
alias gitlog = 'git log --graph --all --color --pretty="%x09%h %cn%x09%s %Cred%d"'

# show swap files
alias showswaps = 'ls -l $TEMP_DIR/vim/swaps'

# phpunit for homebrew Formula
alias phpunit = '/usr/local/Cellar/php/5.3.8/bin/phpunit --colors'

# throw watchr's path
# for phpunit-stack
#PATH='/var/lib/gems/1.8/bin:$PATH'
alias phpwatchr = '/var/lib/gems/1.8/bin/watchr $HOME/workspace/phpunit-stack/watchr.rb'

# MacPorts
#alias port = '/opt/local/bin/port'

# Synergy(Server)
alias synergy = '`brew --prefix`/bin/synergys --config $HOME/Dropbox/conf/synergy.conf --log /var/log/synergyc.log'


