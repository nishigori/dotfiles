{
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "json",
    "go"
  ],
  "languageserver": {
    "erlang": {
      "command": "erlang_ls",
      "filetypes": [
        "erlang"
      ]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".git/"
      ],
      "filetypes": [
        "go"
      ]
    },
    "terraform": {
      "command": "terraform-ls",
      "args": [
        "serve"
      ],
      "filetypes": [
        "terraform",
        "tf"
      ],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "go.goplsOptions": {
    "staticcheck": true
  },
  "explorer.autoExpandOptions": [
    "recursiveSingle"
  ]
}
