{
  "workbench.colorTheme": "GitHub Light Colorblind (Beta)",
  "files.autoSave": "afterDelay",
  "files.insertFinalNewline": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.prettier": true
  },
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "relative",
  "editor.wordWrap": "on",
  "editor.bracketPairColorization.enabled": true,
  "editor.renderLineHighlight": "line",
  "editor.fontFamily": "'Hack Nerd Font Mono', 'Hack Nerd Font', Menlo, monospace",
  "editor.fontSize": 16,
  "editor.scrollBeyondLastLine": false,
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.env.osx": {
    "PATH": "$HOME/bin:/opt/homebrew/bin:$PATH"
  },
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.profiles.osx": {
    "zsh": {
      "path": "/usr/bin/arch",
      "args": [
        "-arm64",
        "/bin/zsh"
      ]
    },
    "tmux": {
      "path": "tmux",
      "icon": "terminal-tmux"
    },
    "bash": null,
    "fish": null,
    "pwsh": null
  },
  "markdown.preview.fontSize": 14,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/.terraform": true,
  },
  "search.exclude": {
    "**/*.tar.gz": true,
    "**/*.zip": true,
    "**/.terraform": true,
  },
  // for vim
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
  "vim.debug.silent": true,
  "vim.autoindent": true,
  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.easymotion": true,
  "vim.visualstar": true,
  "vim.useSystemClipboard": true,
  "vim.ignorecase": true,
  "vim.camelCaseMotion.enable": true,
  "vim.useCtrlKeys": true,
  "vim.leader": "<space>",
  "vim.normalModeKeyBindings": [],
  "vim.normalModeKeyBindingsNonRecursive": [],
  "vim.insertModeKeyBindings": [],
  "vim.insertModeKeyBindingsNonRecursive": [],
  "vim.visualModeKeyBindingsNonRecursive": [],
  // Languages
  "go.alternateTools": {
    "go": "/opt/homebrew/bin/go"
  },
  "[markdown]": {
    "editor.tabSize": 2,
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    },
    "editor.quickSuggestionsDelay": 0,
  },
  "vsicons.dontShowNewVersionMessage": true,
  "restructuredtext.confPath": "",
  "window.zoomLevel": 2,
  "workbench.iconTheme": "vscode-icons",
  "explorer.confirmDragAndDrop": false,
  "deepl.apiKey": "${env:DEEPL_API_AUTH_KEY}",
  "githubPullRequests.queries": [
    {
      "label": "Reviews: me",
      "query": "is:open review-requested:${user}"
    },
    {
      "label": "Assignee: me",
      "query": "is:open assignee:${user}"
    },
    {
      "label": "Author: me",
      "query": "is:open author:${user}"
    }
  ],
  "githubIssues.queries": [
    {
      "label": "Assignee: me",
      "query": "default"
    },
    {
      "label": "Author: me",
      "query": "author:${user} state:open repo:${owner}/${repository}  sort:updated-desc"
    }
  ],
  "git.autofetch": true,
  "terraform.codelens.referenceCount": true,
}
